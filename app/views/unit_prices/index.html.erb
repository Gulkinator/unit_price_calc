<%- model_class = UnitPrice -%>
<div class="page-header">
  <h1><%=t '.title', :default => UnitPrice %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:abv) %></th>
      <th><%= model_class.human_attribute_name(:volume) %></th>
      <th><%= model_class.human_attribute_name(:units) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:unitprice) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @unit_prices.each do |unit_price| %>
      <tr>
        <td><%= unit_price.id %></td>
        <td><%= unit_price.abv %></td>
        <td><%= unit_price.volume %></td>
        <td><%= unit_price.units %></td>
        <td><%= unit_price.price %></td>
        <td><%= unit_price.unitprice %></td>
        <td><%=l unit_price.created_at, format: :long %></td>
        <td>
          <%= link_to unit_price_path(unit_price), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to unit_price_path(unit_price), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_unit_price_path,
            :class => 'btn btn-primary' %>
