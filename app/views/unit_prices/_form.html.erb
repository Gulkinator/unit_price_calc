<%= simple_form_for(@unit_price) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :abv %>
    <%= f.input :volume %>
    <%= f.input :units %>
    <%= f.input :price %>
    <%= f.input :unitprice %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
