<%- model_class = UnitPrice -%>
<div class="page-header">
  <h1><%=t '.title', :default => UnitPrice %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:abv) %></dt>
      <dd><pre class="prettyprint"><%= @unit_price.abv %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:volume) %></dt>
      <dd><pre class="prettyprint"><%= @unit_price.volume %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:units) %></dt>
      <dd><pre class="prettyprint"><%= @unit_price.units %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @unit_price.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:unitprice) %></dt>
      <dd><pre class="prettyprint"><%= @unit_price.unitprice %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              unit_prices_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_unit_price_path(@unit_price), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              unit_price_path(@unit_price),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

